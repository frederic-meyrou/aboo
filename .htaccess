# On force le Charset sur tout le site pour Apache
AddDefaultCharset utf-8

# On enlève l'affichage des fichiers et répertoires
Options All -Indexes

# BEGIN WordPress
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /aboo/
RewriteRule ^index\.php$ - [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /aboo/index.php [L]
</IfModule>

# END WordPress
### Securisation :
<FilesMatch ^wp-config.php$>
 order allow,deny 
 deny from all
</FilesMatch>
<Files .htaccess>
   order allow,deny  
   deny from all  
</Files>
